{
  "description": "Intent-Engine session initialization - runs ie status on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh 2>/dev/null || powershell -NoProfile -ExecutionPolicy Bypass -File ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.ps1",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
