#!/bin/bash
# Claude Code Session Start Hook
# This script runs automatically when Claude Code starts a new session
#
# NOTE: Git hooks are primarily installed by build.rs during first build.
# This is a backup mechanism for edge cases where someone uses the repo
# without running cargo build first.

# Auto-install formatting hooks (silently if already installed)
if [ -f "./scripts/auto-setup-hooks.sh" ]; then
    ./scripts/auto-setup-hooks.sh > /dev/null 2>&1 || true
fi
